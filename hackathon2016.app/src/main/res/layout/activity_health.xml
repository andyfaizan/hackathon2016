<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.dsa.hackathon2016.app.HealthActivity"
    android:touchscreenBlocksFocus="false"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/battery"
            android:src="@drawable/sweat"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:alpha="50" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/batteryText"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
            android:textStyle="bold" />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="150dp"
    android:layout_height="190dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/cooling"
        android:src="@drawable/happy"
        android:alpha="50" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/coolingText"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>

<RelativeLayout
    android:layout_width="150dp"
    android:layout_height="190dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/engine"

        android:src="@drawable/happy"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/engineText"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>
<!-- By Pumbaa80 - Own work, Public Domain, https://commons.wikimedia.org/w/index.php?curid=723508 -->
<RelativeLayout
    android:layout_width="150dp"
    android:layout_height="190dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/wheels"
        android:src="@drawable/happy" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/wheelText"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>



</RelativeLayout>
