<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.rwth.hack.superdsa.ProminentDefectsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:gravity="left|fill_vertical"
        android:showDividers="beginning|none|middle|end">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Inspect Engine (Critical)"
            android:id="@+id/textView"
            android:layout_weight="0.09"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Inspect Break (Critical)"
            android:id="@+id/textView5"
            android:layout_weight="0.09"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Change Battery (Normal)"
            android:id="@+id/textView2"
            android:layout_weight="0.15"
            android:textStyle="bold"
            android:textSize="30dp" />

        <TextView
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fix Mirror (Minor)"
            android:id="@+id/textView3"
            android:layout_weight="0.15"
            android:textColor="#34ec20"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
