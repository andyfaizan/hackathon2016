<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.rwth.hack.superdsa.ServiceHistory">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:onClick="onTermConditions"
        android:clickable="true"
        android:text="Service History"
        android:textSize="30dp"
        android:background="?android:attr/selectableItemBackground"
         />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="3000dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:onClick="onTermConditions"
        android:clickable="true"
        android:text="01.04.2016 : Performed overall Diagnostic, No problems found"
        android:textSize="15dp"
        android:background="?android:attr/selectableItemBackground"
         />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:onClick="onTermConditions"
        android:clickable="true"
        android:text="Last Month : No service."
        android:textSize="15dp"
        android:background="?android:attr/selectableItemBackground"
         />
    <TextView
        android:id="@+id/tv4"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp"
        android:onClick="onTermConditions"
        android:clickable="true"
        android:text="...."
        android:textSize="10dp"
        />
</RelativeLayout>
